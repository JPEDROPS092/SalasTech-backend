# =============================================================================
# DOCKERFILE PARA DESENVOLVIMENTO - SALASTECH
# =============================================================================

FROM python:3.11-slim

# Labels para metadados
LABEL maintainer="SalasTech Team" \
      version="1.0-dev" \
      description="SalasTech Room Reservation System - Development Image"

# Variáveis de ambiente para desenvolvimento
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    DEBIAN_FRONTEND=noninteractive \
    ENVIRONMENT=development \
    DEBUG=True

# Instalar dependências de sistema para desenvolvimento
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    git \
    build-essential \
    vim \
    nano \
    && rm -rf /var/lib/apt/lists/*

# Definir diretório de trabalho
WORKDIR /app

# Instalar ferramentas de desenvolvimento Python
RUN pip install --no-cache-dir --upgrade pip \
    && pip install --no-cache-dir \
        watchdog \
        pytest-watch \
        black \
        flake8 \
        mypy \
        pre-commit

# Copiar requirements e instalar dependências
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Criar usuário para desenvolvimento (com mais permissões)
RUN groupadd --gid 1000 developer \
    && useradd --uid 1000 --gid developer --shell /bin/bash --create-home developer \
    && usermod -aG sudo developer

# Criar diretórios necessários
RUN mkdir -p logs backups \
    && chown -R developer:developer /app

# Copiar script de entrada para desenvolvimento
COPY docker-entrypoint.dev.sh ./docker-entrypoint.sh
RUN chmod +x docker-entrypoint.sh \
    && chown developer:developer docker-entrypoint.sh

# Mudar para usuário de desenvolvimento
USER developer

# Expor porta (com reload automático)
EXPOSE 8000

# Health check para desenvolvimento
HEALTHCHECK --interval=60s --timeout=30s --start-period=10s --retries=2 \
    CMD curl -f http://localhost:8000/health || exit 1

# Comando padrão com reload automático
CMD ["./docker-entrypoint.sh"]
