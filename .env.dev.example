# =============================================================================
# ARQUIVO DE VARIÁVEIS DE AMBIENTE PARA DESENVOLVIMENTO
# =============================================================================
# COPIE ESTE ARQUIVO PARA .env.dev E CONFIGURE SE NECESSÁRIO

# Configurações básicas
ENVIRONMENT=development
DEBUG=True

# Chave secreta (OK para desenvolvimento)
SECRET_KEY=salastech-dev-secret-key-not-for-production

# Configurações de banco
DB_TYPE=sqlite

# Hosts permitidos
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Configurações de log
LOG_LEVEL=debug

# Configurações de desenvolvimento
RELOAD=True
RELOAD_DIRS=app

# Configurações de teste (opcional)
# TEST_DB_URL=sqlite:///test.db
