# =============================================================================
# ARQUIVO DE VARIÁVEIS DE AMBIENTE PARA PRODUÇÃO
# =============================================================================
# COPIE ESTE ARQUIVO PARA .env.prod E CONFIGURE AS VARIÁVEIS

# Configurações básicas
ENVIRONMENT=production
DEBUG=False

# Chave secreta (MUDE ESTA CHAVE!)
SECRET_KEY=your-super-secret-key-change-this-in-production

# Configurações de banco
DB_TYPE=sqlite

# Hosts permitidos (separados por vírgula)
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Configurações de log
LOG_LEVEL=info

# Caminhos para dados persistentes
DATA_PATH=./data
BACKUP_PATH=./backups

# Configurações de email (se necessário)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Configurações de cache (se necessário)
# REDIS_URL=redis://localhost:6379/0

# Configurações de monitoramento (se necessário)
# SENTRY_DSN=your-sentry-dsn
